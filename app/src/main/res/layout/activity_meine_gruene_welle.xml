<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MeineGrueneWelle">


    <TextView android:id="@+id/Laengengrad" android:text="Possition:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <TextView android:id="@+id/Breitengrad" android:text="Possition:"
        android:layout_below="@+id/Laengengrad"
        android:layout_width="warp_contect"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/Homepoint"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Breitengrad"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/Entfernung"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Homepoint"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/Geschwindigkeit" android:text="Geschwindigkeit:-unbekannt"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Entfernung"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/naechsteAmpel" android:text="biszurnaechstenAMpel:-unbekannt"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Geschwindigkeit"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/Zeit" android:text="ZeitbiszurAmpel: "
        android:layout_width="wrap_content"
        android:layout_below="@+id/naechsteAmpel"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/Startpunkt" android:text="Startpunkt festlegen"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Zeit"
        android:layout_height="wrap_content" />



</RelativeLayout>
